{
    "name": "brain-nucleus/client",
    "description": "Official Brain Nucleus event client for Laravel and standalone PHP applications",
    "type": "library",
    "keywords": ["brain", "events", "analytics", "laravel", "monitoring"],
    "license": "MIT",
    "authors": [
        {
            "name": "Brain Nucleus",
            "email": "support@again.com.au"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0"
    },
    "suggest": {
        "illuminate/support": "^10.0|^11.0|^12.0 Required for Laravel integration"
    },
    "autoload": {
        "psr-4": {
            "Brain\\Client\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Brain\\Client\\BrainNucleusClientServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
